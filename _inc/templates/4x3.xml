<theme>
   <formatVersion>4</formatVersion>

   <view name="system,basic,detailed,video">
      <helpsystem name="help">
         <pos>1 1</pos>
         <textColor>777777</textColor>
         <iconColor>77777750</iconColor>
      </helpsystem>
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <path>./../images/pixelsky.png</path>
      </image>
   </view>

   <feature supported="carousel">
      <view name="system">
         <carousel name="systemcarousel">
            <type>horizontal</type>
            <color>e1e1e1</color>
         </carousel>
         <text name="systemInfo">
            <backgroundColor>1c1c1cdd</backgroundColor>
            <color>777777</color>
            <fontPath>./../fonts/pressstart.ttf</fontPath>
         </text>
      </view>
   </feature>

   <view name="basic,detailed,video">
      <image name="logo">
         <origin>0.5 0</origin>
         <pos>0.5 0.03</pos>
         <maxSize>0.234375 0.0555555555555556</maxSize>
      </image>
      <textlist name="gamelist">
         <pos>0.1875 0.1958333333333333</pos>
         <size>0.625 0.5</size>
         <selectorColor>1c1c1c00</selectorColor>
         <selectedColor>bba358</selectedColor>
         <primaryColor>eaeaea</primaryColor>
         <secondaryColor>eaeaea</secondaryColor>
         <fontPath>./../fonts/pressstart.ttf</fontPath>
         <fontSize>0.035</fontSize>
         <forceUppercase>1</forceUppercase>
         <scrollSound>./../sounds/select.wav</scrollSound>
         <alignment>center</alignment>
         <lineSpacing>1.5</lineSpacing>
      </textlist>
   </view>

   <view name="detailed,video">
      <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_developer, md_publisher, md_genre, md_players, md_playcount, md_description">
         <pos>1 1</pos>
      </text>
      <datetime name="md_releasedate,md_lastplayed">
         <pos>1 1</pos>
      </datetime>
      <rating name="md_rating">
         <pos>1 1</pos>
      </rating>
      <textlist name="gamelist">
         <pos>0.04 0.65</pos>
         <size>0.9 0.3</size>
      </textlist>
   </view>

   <view name="detailed">
      <image name="crt-bezel" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.37</pos>
         <maxSize>0.5 0.5</maxSize>
         <path>./../images/crt-bezel.svg</path>
      </image>
      <image name="md_image">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.37</pos>
         <size>0.465 0.465</size>
      </image>
      <image name="crt-screen" extra="true">
         <origin>0.5 0.5</origin>
         <pos>0.5 0.37</pos>
         <size>0.465 0.465</size>
         <path>./../images/crt-screen.svg</path>
      </image>
   </view>

   <feature supported="video">
      <view name="video">
         <image name="crt-bezel" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.3666666666666667</pos>
            <maxSize>0.35625 0.3638888888888889</maxSize>
            <path>./../images/crt-bezel.svg</path>
         </image>
         <image name="md_image">
            <origin>1 1</origin>
            <pos>0.686 0.55</pos>
            <maxSize>0.1354166666666667 0.1805555555555556</maxSize>
         </image>
         <image name="md_marquee">
            <origin>0 1</origin>
            <pos>0.31875 0.55</pos>
            <maxSize>0.1354166666666667 0.1805555555555556</maxSize>
         </image>
         <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.3666666666666667</pos>
            <maxSize>0.3333333333333333 0.3333333333333333</maxSize>
            <delay>0.5</delay>
            <default>./../videos/static.mp4</default>
            <showSnapshotNoVideo>false</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
         </video>
      </view>
   </feature>

   <feature supported="z-index">
      <view name="detailed,video">
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <image name="md_image">
            <zIndex>80</zIndex>
         </image>
         <image name="crt-screen" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.5 0.3666666666666667</pos>
            <maxSize>0.3333333333333333 0.3333333333333333</maxSize>
            <path>./../images/crt-screen.svg</path>
            <zIndex>60</zIndex>
         </image>
      </view>
      <view name="video">
         <image name="md_image">
            <zIndex>120</zIndex>
         </image>
         <image name="md_marquee">
            <zIndex>120</zIndex>
         </image>
         <image name="crt-bezel" extra="true">
            <zIndex>100</zIndex>
         </image>
         <video name="md_video">
            <zIndex>80</zIndex>
         </video>
      </view>
   </feature>
   
</theme>